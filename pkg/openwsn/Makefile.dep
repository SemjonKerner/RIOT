ifneq (,$(filter openwsn,$(USEPKG)))
  USEMODULE += openwsn_openstack
  USEMODULE += openwsn_drivers
  USEMODULE += openwsn_scheduler
  USEMODULE += openwsn_mac_low
  USEMODULE += openwsn_mac_high
  USEMODULE += openwsn_iphc
  USEMODULE += openwsn_ipv6
  USEMODULE += openwsn_transport
  USEMODULE += openwsn_crosslayers

  USEMODULE += luid
  USEMODULE += netdev_default
  FEATURES_REQUIRED += periph_gpio
  FEATURES_REQUIRED += periph_rtt
  FEATURES_REQUIRED += periph_spi
  FEATURES_REQUIRED += periph_timer
  FEATURES_REQUIRED += periph_uart
endif

ifneq (,$(filter openmote-b,$(BOARD)))
  CFLAGS += -DOPENWSN_DEBUGPIN_FRAME=GPIO_PIN\(0,7\)
  CFLAGS += -DOPENWSN_DEBUGPIN_SLOT=GPIO_PIN\(2,3\)
  CFLAGS += -DOPENWSN_DEBUGPIN_FSM=GPIO_PIN\(1,3\)
  CFLAGS += -DOPENWSN_DEBUGPIN_TASK=GPIO_PIN\(1,2\)
  CFLAGS += -DOPENWSN_DEBUGPIN_ISR=GPIO_PIN\(1,1\)
  CFLAGS += -DOPENWSN_DEBUGPIN_RADIO=GPIO_PIN\(1,0\)
endif

